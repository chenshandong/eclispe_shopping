<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuItemParentNew"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tuan_detail_item_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/menuTitleNew"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:singleLine="true"
        android:text="套餐内容"
        android:textColor="#ff111111"
        android:textSize="16.0sp" />

    <View
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@+id/menuTitleNew"
        android:background="@color/tuan_detial_line_color" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/menuTitleViewNew"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="3.0dip"
            android:paddingBottom="15.0dip"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip"
            android:paddingTop="15.0dip"
            android:text="默认文本"
            android:textColor="#ff666666"
            android:visibility="gone"
            android:textSize="14.0sp" />


        <FrameLayout
            android:id="@+id/menuConstructTitleViewNew"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <WebView
                android:id="@+id/webView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@+id/content"
        android:layout_marginLeft="12.0dip"
        android:background="@color/tuan_detial_line_color" />

    <TextView
        android:id="@+id/textPicInfoTitleNew"
        android:layout_width="fill_parent"
        android:layout_height="43.0dip"
        android:layout_below="@+id/imageView2"
        android:background="@drawable/selector_list_row"
        android:drawableRight="@drawable/icon_arrows_gray_right"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:text="图文详情"
        android:textColor="#ffff4978"
        android:textSize="14.0sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_main_login_container"
    android:layout_width="fill_parent"
    android:layout_height="84.0dip"
    android:background="#ffffffff" >

    <LinearLayout
        android:id="@+id/not_logged_in_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:gravity="center_horizontal"
        android:orientation="vertical"
         >

        <Button
            android:id="@+id/login_button"
            android:layout_width="120.0dip"
            android:layout_height="28.0dip"
            android:layout_marginBottom="12.0dip"
            android:layout_marginTop="16.0dip"
            android:background="@drawable/red_btn_bg"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10.0dip"
            android:drawablePadding="6.0dip"
            android:drawableRight="@drawable/mine_arrow_right"
            android:includeFontPadding="false"
            android:text="注册"
            android:textColor="@color/mine_black2"
            android:textSize="13.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logged_in_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="52.0dip"
            android:layout_height="52.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="12.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/mine_avatar" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3.0"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6.0dip"
                android:drawableRight="@drawable/mine_user_vip_disable"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:textColor="@color/mine_black2"
                android:textSize="16.0sp" />

            <Button
            android:id="@+id/quitLogin_button"
            android:layout_width="80.0dip"
            android:layout_height="23.0dip"
            android:layout_marginBottom="12.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/red_btn_bg"
            android:text="注销"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="13.0sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mine_arrow_right" />
    </LinearLayout>

    <TextView
        android:id="@+id/anti_spam"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#66ffffff"
        android:clickable="true"
        android:gravity="center|left"
        android:includeFontPadding="false"
        android:paddingBottom="1.0dip"
        android:paddingLeft="15.0dip"
        android:paddingTop="6.5dip"
        android:text="您的手机号码有风险，请尽快验证，以免影响正常消费！"
        android:textColor="#ffff0000"
        android:textSize="12.0sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/user_isSync"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_gravity="top"
        android:background="#80000000"
        android:clickable="false"
        android:gravity="center|left"
        android:includeFontPadding="false"
        android:paddingLeft="12.0dip"
        android:text="您的历史订单数据正在同步中，稍后即可查看"
        android:textColor="#ffffffff"
        android:textSize="13.0sp"
        android:visibility="gone" 
        />

</FrameLayout>
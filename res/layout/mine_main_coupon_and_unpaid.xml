<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff7f7f7"
    android:baselineAligned="false"
    android:minHeight="48.0dip" >

    <RelativeLayout
        android:id="@+id/coupon"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_list_row" >

        <TextView
            android:id="@+id/coupon_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/mine_main_coupon_normal"
            android:includeFontPadding="false"
            android:text="糯米券"
            android:textColor="@color/mine_black3"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/coupon_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/coupon_label"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="4.0dip"
            android:background="@drawable/mine_red_point_big"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minHeight="12.0dip"
            android:minWidth="12.0dip"
            android:paddingLeft="3.0dip"
            android:paddingRight="3.0dip"
            android:textColor="@color/white"
            android:textSize="10.0sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/unpaid"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_list_row" >

        <TextView
            android:id="@+id/unpaid_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/mine_main_unpaid_normal"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="待付款"
            android:textColor="@color/mine_black3"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/unpaid_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/unpaid_label"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="4.0dip"
            android:background="@drawable/mine_red_point_big"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minHeight="12.0dip"
            android:minWidth="12.0dip"
            android:paddingLeft="3.0dip"
            android:paddingRight="3.0dip"
            android:textColor="@color/white"
            android:textSize="10.0sp"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/t10_store_card"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_list_row" >

        <TextView
            android:id="@+id/store_card_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/mine_main_store_card_label_normal"
            android:gravity="center"
            android:text="卡包"
            android:textColor="@color/mine_black3"
            android:textSize="12.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_favorite"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/selector_list_row" >

        <TextView
            android:id="@+id/my_favorite_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/mine_main_favorite_normal"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="收藏"
            android:textColor="@color/mine_black3"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/my_favorite_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/my_favorite_label"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="4.0dip"
            android:background="@drawable/mine_red_point_big"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minHeight="12.0dip"
            android:minWidth="12.0dip"
            android:paddingLeft="3.0dip"
            android:paddingRight="3.0dip"
            android:textColor="@color/white"
            android:textSize="10.0sp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>
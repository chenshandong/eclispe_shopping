<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res/com.example.sd01_day">

    <android.support.v4.view.ViewPager
        android:id="@+id/homeguangao_page"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#cdcdcd" />

    <com.xinbo.widget.ViewPagerIndicator
        android:id="@+id/homeguanggaoindicator"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/homeguangao_page"
        android:layout_alignParentLeft="true"
        app:indicatorCount="2"
        app:radiusSize="4dp" />

</RelativeLayout>
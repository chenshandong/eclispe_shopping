<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="48dp" 
    android:background="#0000"
    >

    <ImageButton
        android:id="@+id/groupon_detail_ab_back"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.0dip"
        android:background="@drawable/groupon_detail_ab_icon_circle_bg"
        android:src="@drawable/icon_nav_fanhui_normal" />
    <!-- app:lowLayerIcon="@drawable/icon_nav_fanhui_white" -->

    <ImageButton
        android:id="@+id/groupon_detail_ab_left_icon"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_centerVertical="true"
        android:layout_marginRight="12.0dip"
        android:layout_toLeftOf="@+id/groupon_detail_ab_right_icon"
        android:src="@drawable/daren_share_selector"
        android:background="@drawable/groupon_detail_ab_icon_circle_bg"
        />
<!--         app:lowLayerIcon="@drawable/icon_nav_fenxiang_white"  -->

    <TextView
        android:id="@+id/groupon_detail_ab_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:paddingLeft="100.0dip"
        android:paddingRight="100.0dip"
        android:singleLine="true"
        android:text="团购详情"
        android:textColor="@android:color/black"
        android:textSize="18.0sp" />

    <RelativeLayout
        android:id="@+id/groupon_detail_ab_right_icon"
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12.0dip"
        >
        <ImageButton
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/groupon_detail_ab_icon_circle_bg" />

        <ImageView
            android:id="@+id/img_details_gouwuche"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/selector_details_gouwuche" />

    </RelativeLayout>

</RelativeLayout>
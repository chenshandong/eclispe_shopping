<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shoppingcart_actionbar_container"
    android:layout_width="@dimen/home_title_shoppingcart_container_width"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/icon_shoppingcart"
        android:layout_width="@dimen/home_title_shoppingcart_icon_width"
        android:layout_height="@dimen/home_title_shoppingcart_icon_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12.0dip"
        android:src="@drawable/selector_icon_shoppingcart_pink" />

    <TextView
        android:id="@+id/icon_shoppingcart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/icon_shoppingcart"
        android:layout_marginRight="2.0dip"
        android:background="@drawable/mine_red_point_big"
        android:gravity="center"
        android:includeFontPadding="false"
        android:minHeight="@dimen/home_title_shoppingcart_red_point_heigth"
        android:minWidth="@dimen/home_title_shoppingcart_red_point_width"
        android:paddingLeft="3.0dip"
        android:paddingRight="3.0dip"
        android:textColor="@color/white"
        android:textSize="@dimen/home_title_shoppingcart_textsize"
        android:visibility="visible" />

</RelativeLayout>